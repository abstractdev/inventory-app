<body class="box-border w-screen text-xs sm:text-sm md:text-base lg:text-lg xl:text-xl bg-bg">
  <div class="max-w-full min-h-screen flex flex-col">
    <%- include('./partials/header.ejs') %>
    <div class="flex p-10 font-ralewayB justify-center sm:items-start sm:justify-start">
      <div class="sm:justify-center items-center flex-1 pt-10">
        <div class="flex flex-col">
          <% if (brand_products.length) { %>
            <p>Delete the following products before deleting this brand</p>
            <% Object.values(brand_products).forEach(function(e) { %>
              <a class="py-2 border-solid border-2 rounded-md my-1 px-2 text-brown" href="<%= e.url %>"> <%= e.name %></a>
            <% }); %>
          <% } else { %>
            <p>Are you sure you want to delete this brand?</p>
            <form action="" method="post">
              <input type="hidden" name="brandid" required="true" value="<%= brand._id %>">
              <button class="border-solid border-2 rounded-full bg-black text-white p-2 w-1/2 mt-1" type="submit">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
        <div class="hidden sm:flex items-start justify-center flex-1">
          <img
            class="max-h-full max-w-[15rem] sm:max-w-[20rem] m:max-w-[25rem] lg:max-w-[30rem]"
            src="/images/deleteImage.svg"
            alt="person with caclculator"
          />
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
  </div>
</body>