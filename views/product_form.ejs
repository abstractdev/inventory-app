<body class="box-border w-screen text-xs sm:text-sm md:text-base lg:text-lg xl:text-xl bg-bg">
  <div class="max-w-full min-h-screen flex flex-col">
    <%- include('./partials/header.ejs') %>
    <div class="flex p-10 font-ralewayB items-start">
        <form action="" method="POST" class="max-w-full">
          <div class="flex flex-col gap-4">
            <% if (post) { %>
              <% if (errors) { %>
                <% errors.forEach(function(error) { %>
                  <li class="list-none"><%- error.msg %></li>
                <% }); %>
              <% } %>
            <% } %>
              <label class="text-brown" for="name">Name*</label>
              <input class="p-1" type="text" name="name" required="true" placeholder="Name of product"
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.name %>"
                <% } %>>
              <label class="text-brown" for="brand">Brand*</label>
              <select class="p-1" type="select" name="brand" required="true" placeholder="Select brand" >
                <% Object.values(brands).forEach(function(brand) { %>
                  <option value="<%= brand._id %>"><%- brand.name %></option>
                <% }); %>
              </select>
              <label class="text-brown" for="flavor">Flavor</label>
              <input class="p-1" type="text" name="flavor" placeholder="Not required"
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.flavor %>"
              <% } %>>
              <label class="text-brown" for="description">Description*</label>
              <input class="p-1" type="text" name="description" required="true" placeholder="Description of product" 
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.description %>"
              <% } %>>
              <label class="text-brown" for="form">Form*</label>
              <input class="p-1" type="text" name="form" required="true" placeholder="Form of product"
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.form %>"
              <% } %>>
              <label class="text-brown" for="servings">Servings*</label>
              <input class="p-1" type="text" name="servings" required="true" placeholder="Servings of product (Must be a number)"
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.servings %>"
              <% } %>>
              <label class="text-brown" for="serving_size">Serving size*</label>
              <input class="p-1" type="text" name="serving_size" required="true" placeholder="Serving size of product"
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.serving_size %>"
              <% } %>>
              <label class="text-brown" for="weight">Weight*</label>
              <input class="p-1" type="text" name="weight" required="true" placeholder="Weight of product in ounces (Must be a number)" 
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.weight %>"
              <% } %>>
              <label class="text-brown" for="quantity">Quantity*</label>
              <input class="p-1" type="text" name="quantity" required="true" placeholder="Quantity of product (Must be a number)" 
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.quantity %>"
              <% } %>>
              <label class="text-brown" for="strength">Strength</label>
              <input class="p-1" type="text" name="strength" placeholder="Not required" 
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.strength %>"
              <% } %>>
              <label class="text-brown" for="price">Price*</label>
              <input class="p-1" type="text" name="price" required="true" placeholder="Price of product (Must be a number)" 
              <% if (post) { %>
                value="<%= typeof product === undefined ? '' : product.price %>"
              <% } %>>
              <div class="flex flex-col">
                <h3 class="text-brown mb-1">Category (required)</h3>
                <div class="flex gap-2 flex-wrap">
                  <% Object.values(categories).forEach(function(category) { %>
                    <input type="checkbox" name="category" value="<%= category._id %>"><%- category.name %></input>
                  <% }); %>
                </div>
              </div>
            
            <button class="bg-brown text-white w-1/3 border-2 border-white p-1 rounded-md" type="submit">Submit</button>
          </div>
        </form>
        <div class="hidden min-w-[15rem] sm:flex justify-center flex-1">
          <img
            class="max-h-full sm:max-w-[20rem] m:max-w-[25rem] lg:max-w-[30rem]"
            src="/images/productImage.svg"
            alt="person holding box"
          />
        </div>
      </div>
    </div>
    <%- include('./partials/footer.ejs') %>
  </div>
</body>
